<Window x:Class="Docker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Docker Text Editor" Height="600" Width="900"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Window.Resources>
        <Style x:Key="ToolbarIconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LoadSaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="ToolBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolBar">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" IsItemsHost="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SoftComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF8F9FA"/>
            <Setter Property="Foreground" Value="#FF222831"/>
            <Setter Property="BorderBrush" Value="#FFB8C6DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>
        <Style x:Key="SoftButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDDE6ED"/>
            <Setter Property="Foreground" Value="#FF222831"/>
            <Setter Property="BorderBrush" Value="#FFB8C6DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <!-- CornerRadius only in Border below -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FormatToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FFE0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top" Background="{StaticResource ToolbarBackgroundBrush}">
            <ComboBox x:Name="PageSizeCombo" Width="120" Margin="10,0,8,0" ToolTip="Page Size" SelectionChanged="PageSizeCombo_SelectionChanged" Style="{StaticResource SoftComboBoxStyle}">
                <ComboBoxItem Content="A4 (210x297 mm)" Tag="793,1122"/>
                <ComboBoxItem Content="Letter (8.5x11 in)" Tag="816,1056"/>
                <ComboBoxItem Content="Legal (8.5x14 in)" Tag="816,1344"/>
                <ComboBoxItem Content="A5 (148x210 mm)" Tag="583,827"/>
                <ComboBoxItem Content="B5 (176x250 mm)" Tag="666,972"/>
                <ComboBoxItem Content="Executive (7.25x10.5 in)" Tag="696,1008"/>
            </ComboBox>
            <ComboBox x:Name="FontFamilyCombo" Width="180" Margin="0,0,8,0" ToolTip="Font Family" SelectionChanged="FontFamilyCombo_SelectionChanged" Style="{StaticResource SoftComboBoxStyle}"/>
            <ComboBox x:Name="FontSizeCombo" Width="60" Margin="0,0,8,0" ToolTip="Font Size" SelectionChanged="FontSizeCombo_SelectionChanged" Style="{StaticResource SoftComboBoxStyle}">
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="18"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="22"/>
                <ComboBoxItem Content="24"/>
                <ComboBoxItem Content="26"/>
                <ComboBoxItem Content="28"/>
                <ComboBoxItem Content="36"/>
                <ComboBoxItem Content="48"/>
                <ComboBoxItem Content="72"/>
            </ComboBox>
            <ToggleButton x:Name="BoldButton" Content="B" FontWeight="Bold" Width="32" Height="32" Margin="0,0,4,0" ToolTip="Bold" Style="{StaticResource FormatToggleButtonStyle}" Checked="BoldButton_Checked" Unchecked="BoldButton_Unchecked"/>
            <ToggleButton x:Name="ItalicButton" Content="I" FontStyle="Italic" Width="32" Height="32" Margin="0,0,4,0" ToolTip="Italic" Style="{StaticResource FormatToggleButtonStyle}" Checked="ItalicButton_Checked" Unchecked="ItalicButton_Unchecked"/>
            <ToggleButton x:Name="UnderlineButton" Width="32" Height="32" Margin="0,0,4,0" ToolTip="Underline" Style="{StaticResource FormatToggleButtonStyle}" Checked="UnderlineButton_Checked" Unchecked="UnderlineButton_Unchecked">
                <TextBlock Text="U" TextDecorations="Underline" FontWeight="Normal"/>
            </ToggleButton>
            <Button x:Name="ListButton" Width="32" Height="32" Margin="0,0,4,0" ToolTip="List" Style="{StaticResource ToolbarIconButtonStyle}" Click="ListButton_Click">
                <TextBlock Text="â˜³" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Button>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                <Button Content="ðŸ“‚" Margin="0,0,4,0" ToolTip="Load" Style="{StaticResource LoadSaveButtonStyle}"/>
                <Button Content="ðŸ’¾" Margin="0,0,4,0" ToolTip="Save" Style="{StaticResource LoadSaveButtonStyle}"/>
                <Button Content="âž•" Margin="0,0,4,0" ToolTip="New Document" Style="{StaticResource ToolbarIconButtonStyle}"/>
            </StackPanel>
        </ToolBar>
        <!-- Editor -->
        <Border Margin="24" CornerRadius="16" BorderBrush="#FFB8C6DB" BorderThickness="0" Background="Transparent">
            <Border.Effect>
                <DropShadowEffect Color="#FFB8C6DB" BlurRadius="16" ShadowDepth="0" Opacity="0.25" />
            </Border.Effect>
            <RichTextBox x:Name="Editor" Padding="48,36,48,36" Background="{StaticResource PrimaryBackgroundBrush}" Foreground="{StaticResource PrimaryForegroundBrush}" FontFamily="Segoe UI" FontSize="14" BorderThickness="0" BorderBrush="Transparent" SelectionChanged="Editor_SelectionChanged"/>
        </Border>
    </DockPanel>
</Window>
