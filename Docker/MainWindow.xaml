<Window x:Class="Docker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Docker Text Editor" Height="600" Width="900"
        Background="{StaticResource PrimaryBackgroundBrush}">
    <Window.Resources>
        <Style TargetType="ToolBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolBar">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <StackPanel Orientation="Horizontal" IsItemsHost="True" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="SoftComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#FFF8F9FA"/>
            <Setter Property="Foreground" Value="#FF222831"/>
            <Setter Property="BorderBrush" Value="#FFB8C6DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>
        <Style x:Key="SoftButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFDDE6ED"/>
            <Setter Property="Foreground" Value="#FF222831"/>
            <Setter Property="BorderBrush" Value="#FFB8C6DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <!-- CornerRadius only in Border below -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="FormatToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ButtonForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#FFE0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top" Background="{StaticResource ToolbarBackgroundBrush}">
            <ComboBox x:Name="FontFamilyCombo" Width="180" Margin="10,0,8,0" ToolTip="Font Family" SelectionChanged="FontFamilyCombo_SelectionChanged" Style="{StaticResource SoftComboBoxStyle}"/>
            <ComboBox x:Name="FontSizeCombo" Width="60" Margin="0,0,8,0" ToolTip="Font Size" SelectionChanged="FontSizeCombo_SelectionChanged" Style="{StaticResource SoftComboBoxStyle}">
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
                <ComboBoxItem Content="11"/>
                <ComboBoxItem Content="12"/>
                <ComboBoxItem Content="14"/>
                <ComboBoxItem Content="16"/>
                <ComboBoxItem Content="18"/>
                <ComboBoxItem Content="20"/>
                <ComboBoxItem Content="22"/>
                <ComboBoxItem Content="24"/>
                <ComboBoxItem Content="26"/>
                <ComboBoxItem Content="28"/>
                <ComboBoxItem Content="36"/>
                <ComboBoxItem Content="48"/>
                <ComboBoxItem Content="72"/>
            </ComboBox>
            <ToggleButton x:Name="BoldButton" Content="B" FontWeight="Bold" Width="32" Height="32" Margin="0,0,4,0" ToolTip="Bold" Style="{StaticResource FormatToggleButtonStyle}" Checked="BoldButton_Checked" Unchecked="BoldButton_Unchecked"/>
            <ToggleButton x:Name="ItalicButton" Content="I" FontStyle="Italic" Width="32" Height="32" Margin="0,0,4,0" ToolTip="Italic" Style="{StaticResource FormatToggleButtonStyle}" Checked="ItalicButton_Checked" Unchecked="ItalicButton_Unchecked"/>
            <ToggleButton x:Name="UnderlineButton" Width="32" Height="32" Margin="0,0,4,0" ToolTip="Underline" Style="{StaticResource FormatToggleButtonStyle}" Checked="UnderlineButton_Checked" Unchecked="UnderlineButton_Unchecked">
                <TextBlock Text="U" TextDecorations="Underline" FontWeight="Normal"/>
            </ToggleButton>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Open" Width="60" Margin="0,0,4,0" Style="{StaticResource SoftButtonStyle}"/>
                <Button Content="Save" Width="60" Margin="0,0,4,0" Style="{StaticResource SoftButtonStyle}"/>
            </StackPanel>
        </ToolBar>
        <!-- Editor -->
    <RichTextBox x:Name="Editor" Margin="24" Padding="12" Background="{StaticResource PrimaryBackgroundBrush}" Foreground="{StaticResource PrimaryForegroundBrush}" FontFamily="Segoe UI" FontSize="14" BorderBrush="#FFB8C6DB" BorderThickness="1" SelectionChanged="Editor_SelectionChanged"/>
    </DockPanel>
</Window>
